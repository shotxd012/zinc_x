<nav class="border-border bg-bg-panel fixed z-30 w-full border-b">
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center justify-start">
        <button
          id="toggleSidebarMobile"
          aria-expanded="true"
          aria-controls="sidebar"
          class="text-text-muted hover:bg-bg-surface hover:text-text focus:bg-bg-surface focus:ring-surface cursor-pointer rounded p-2 focus:ring-2 lg:hidden">
          <i id="toggleSidebarMobileHamburger" class="fas fa-bars h-6 w-6"></i>
          <i id="toggleSidebarMobileClose" class="fas fa-times hidden h-6 w-6"></i>
        </button>
        <a href="/dashboard" class="flex items-center space-x-3">
          <img
            src="<%= coreConfig['DASHBOARD']['LOGO_URL'] %>"
            class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8"
            alt="Strange Logo" />
          <span class="text-text self-center whitespace-nowrap text-lg font-semibold sm:text-xl md:text-2xl">
            <%= coreConfig['DASHBOARD']['LOGO_NAME'] %>
          </span>
        </a>
      </div>
      <div class="flex items-center">
        <!-- Dark Mode Toggle -->
        <div
          x-data="{
  darkMode: localStorage.getItem('color-theme') === 'dark' || (!localStorage.getItem('color-theme') && window.matchMedia('(prefers-color-scheme: dark)').matches),
  toggleDarkMode() {
    this.darkMode = !this.darkMode;
    localStorage.setItem('color-theme', this.darkMode ? 'dark' : 'light');
    document.documentElement.classList.toggle('dark', this.darkMode);
  }
}"
          x-init="document.documentElement.classList.toggle('dark', darkMode)"
          class="ml-4 flex items-center">
          <button
            @click="toggleDarkMode"
            data-tooltip-target="tooltip-toggle-dark-mode"
            class="text-text-muted hover:bg-bg-surface focus:ring-surface rounded-lg p-2.5 text-sm focus:outline-none focus:ring-4">
            <i x-show="!darkMode" x-cloak class="fas fa-moon h-5 w-5"></i>
            <i x-show="darkMode" x-cloak class="fas fa-sun h-5 w-5"></i>
          </button>
          <div
            id="tooltip-toggle-dark-mode"
            role="tooltip"
            class="tooltip bg-bg-surface text-text invisible absolute z-10 inline-block rounded-lg px-3 py-2 text-sm font-medium opacity-0 shadow-sm transition-opacity duration-300">
            <%= tr('NAV.TIP_DARK_MODE') %>
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        </div>

        <!-- Profile -->
        <div class="ml-3 flex items-center">
          <div>
            <button
              type="button"
              class="bg-bg-interactive focus:ring-surface flex rounded-full text-sm focus:ring-4"
              id="user-menu-button-2"
              aria-expanded="false"
              data-dropdown-toggle="dropdown-2">
              <span class="sr-only"><%= tr('NAV.SR_USER_MENU') %></span>
              <img
                class="h-8 w-8 rounded-full"
                src="<%= `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png` %>"
                alt="user photo" />
            </button>
          </div>
          <!-- Dropdown menu -->
          <div
            class="divide-border bg-bg-surface z-50 my-4 hidden list-none divide-y rounded text-base shadow"
            id="dropdown-2">
            <div class="px-4 py-3" role="none">
              <p class="text-text text-sm" role="none"><%= user.username %></p>
              <p class="text-text-muted truncate text-sm font-medium" role="none"><%= user.email %></p>
            </div>
            <ul class="py-1" role="none">
              <% if (user.isOwner) { %>
              <li>
                <a href="/admin" class="text-text-muted block px-4 py-2 text-sm hover:text-white" role="menuitem">
                  <%= tr('NAV.ADMIN') %>
                </a>
              </li>
              <% } %>
              <li>
                <a href="/auth/logout" class="text-text-muted block px-4 py-2 text-sm hover:text-white" role="menuitem">
                  <%= tr('NAV.LOGOUT') %>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
